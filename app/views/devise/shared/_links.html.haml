%ul.nav.justify-content-center
  - if controller_name != 'sessions'
    %li.nav-item
      = link_to t("auth.log_in"), new_session_path(resource_name), class: 'nav-link'
  - if devise_mapping.registerable? && controller_name != 'registrations'
    %li.nav-item
      = link_to t(:"auth.sign_up"), new_registration_path(resource_name), class: 'nav-link'
  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    %li.nav-item
      = link_to t(:"auth.forgot_password"), new_password_path(resource_name), class: 'nav-link'
  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    %li.nav-item
      = link_to t(:"no_confirmation_instructions"), new_confirmation_path(resource_name), class: 'nav-link'
  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    %li.nav-item
      = link_to t(:"no_unlock_instructions"), new_unlock_path(resource_name), class: 'nav-link'
  - if devise_mapping.omniauthable?
    - resource_class.omniauth_providers.each do |provider|
      %li.nav-item
        = link_to "#{t(:"sign_in_with")} #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'nav-link'
