.form-auth
  %h2= t('auth.sign_up')
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .form-group
      = f.label :first_name, class: 'sr-only'
      = f.text_field :first_name, autofocus: true, autocomplete: "email", class: 'form-control input-first', placeholder: t(:'helpers.label.user.first_name')
      = f.label :last_name, class: 'sr-only'
      = f.text_field :last_name, autofocus: true, autocomplete: "email", class: 'form-control input-inside', placeholder: t(:'helpers.label.user.last_name')
      = f.label :email, class: 'sr-only'
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control input-inside', placeholder: t(:'helpers.label.user.email')
      = f.label :password, class: 'sr-only'
      = f.password_field :password, autocomplete: "new-password", class: 'form-control input-inside', placeholder: t(:'helpers.label.user.password')
      = f.label :password_confirmation, class: 'sr-only'
      = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control input-last', placeholder: t(:'helpers.label.user.password_confirmation')
      
      - if @minimum_password_length
        %p
          %em= t(:'auth.min_chars', length: @minimum_password_length)
    
    .actions
      = f.submit t(:"auth.sign_up"), class: 'btn btn-success btn-block'

    = render "devise/shared/links"
